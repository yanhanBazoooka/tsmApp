extends ../node_modules/jade-bootstrap/_bootstrap
append styles
 // Custom styles for this template
 link(href='../stylesheets/signin.css', rel='stylesheet')


block body
 .container
   form(method="post" action="/signin").form-signin
     h2.form-signin-heading Please sign in
     label.sr-only(for='inputEmail') Email address
     input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='', name='email')
     label.sr-only(for='inputPassword') Password
     input#inputPassword.form-control(type='password', placeholder='Password', required='', name='password')
     .checkbox
       label
         input(type='checkbox', value='remember-me')
         |  Remember me
     button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
  
   form(method="get" action="/signup").form-signin
     button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign Up (First User ?)
