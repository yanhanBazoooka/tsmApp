extends ../node_modules/jade-bootstrap/_bootstrap

append styles
  // Custom styles for this template
  link(href='../stylesheets/signup.css', rel='stylesheet')

block body
  .container
    form(method="post" action="/signup").form-signup
      h2.form-signup-heading Sign Up
      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='', name='email')
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(type='password', placeholder='Password', required='', name='password')
      label.sr-only(for='inputConfirmPassword') Confirm Password
      input#inputConfirmPassword.form-control(type='password', placeholder='Confirm Password', required='', name='confirmPassword')
      .checkbox
        label
          input(type='checkbox', value='terms') 
          |  I agree to the terms and conditions
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign Up
